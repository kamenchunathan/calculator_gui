#:kivy 1.11.0

# custom button
<CustButton@Button>
    font_size:      32


<CalcGridLayout>
# id for easy reference to the layour
    id:     calculator
    display:    entry
    rows:       6
    padding:    10
    spacing:    10


    # for input display
    BoxLayout:
        TextInput:
            id:         entry
            font_size:  32
            multiline:  False

    BoxLayout:
        spacing:        10
        CustButton:
            text:       '7'
            on_press:   entry.text += self.text
        CustButton:
            text:       '8'
            on_press:   entry.text += self.text
        CustButton:
            text:       '9'
            on_press:   entry.text += self.text
        CustButton:
            text:       '+'
            on_press:   entry.text += self.text

    BoxLayout:
        spacing:        10
        CustButton:
            text:       '4'
            on_press:   entry.text += self.text
        CustButton:
            text:       '5'
            on_press:   entry.text += self.text
        CustButton:
            text:       '6'
            on_press:   entry.text += self.text
        CustButton:
            text:       '-'
            on_press:   entry.text += self.text

    BoxLayout:
        spacing:        10
        CustButton:
            text:       '1'
            on_press:   entry.text += self.text
        CustButton:
            text:       '2'
            on_press:   entry.text += self.text
        CustButton:
            text:       '3'
            on_press:   entry.text += self.text
        CustButton:
            text:       '*'
            on_press:   entry.text += self.text

    BoxLayout:
        spacing:10
        CustButton:
            text:       'AC'
            on_press:   entry.text = ''
        CustButton:
            text:       '0'
            on_press:   entry.text += self.text
        CustButton:
            text:       '='
            on_press:   calculator.on_equals_pressed()
        CustButton:
            text:       '/'
            on_press:   entry.text += self.text
